doctype html
html
    head
        include module/head
    body.skin-blue.sidebar-mini.wysihtml5-supported
        .wrapper
            include module/header
            include module/main-sidebar
            .content-wrapper
                if(page == "orders")
                    include module/orders
                if(page == "dashboard")
                    include dashboard
                if(page == "printers")
                    include printers
                if(page == "tablets")
                    include tablets
                if(page == "counters")
                    include counters
            include module/main-footer
            include module/control-sidebar
        include module/script
        if(page == "tablets")
            script(src='../javascripts/adminTablets.js' ,type='text/javascript')