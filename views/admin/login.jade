   body.login-page
      .login-box
         .login-logo
            a(href='.')
               b Admin
               | Popo RMS
         // /.login-logo
         .login-box-body
            p.login-box-msg Sign in to start your Managment
            div
               .form-group.has-feedback
                  input#username.form-control(type='name', placeholder='Administrator')
                  span.glyphicon.glyphicon-user.form-control-feedback
               .form-group.has-feedback
                  input#password.form-control(type='password', placeholder='Password')
                  span.glyphicon.glyphicon-lock.form-control-feedback
               .row
                  .col-xs-8
                     .checkbox.icheck
                        label
                           input(type='checkbox')
                           |  Remember Me
                  // /.col
                  .col-xs-4
                     button#signin.btn.btn-primary.btn-block.btn-flat Sign In
                  // /.col
            // /.social-auth-links
            a(href='#') I forgot my password
            br
            a.text-center(href='register.html') Register a new membership
         // /.login-box-body
      // /.login-box
      // jQuery 2.1.4
      script(src='../admintemp/AdminLTE-2.1.1/plugins/jQuery/jQuery-2.1.4.min.js')
      // Bootstrap 3.3.2 JS
      script(src='../admintemp/AdminLTE-2.1.1/bootstrap/js/bootstrap.min.js', type='text/javascript')
      // iCheck
      script(src='../admintemp/AdminLTE-2.1.1/plugins/iCheck/icheck.min.js', type='text/javascript')
      script(src='../javascripts/post.js')
      script(src='../plugins/notify.min.js')
      script.
         $(function () {
            $('input').iCheck({
               checkboxClass: 'icheckbox_square-blue',
               radioClass: 'iradio_square-blue',
               increaseArea: '20%' // optional
            });
         });
         $("#signin").click(function(){
            var d = $("#username")[0].value;
            if($("#username")[0].value.length >0 && $("#password")[0].value.length >0)
               reqData({cmdType:"adminSignIn",
                  username:$("#username")[0].value,
                  password:$("#password")[0].value},function(data){
                  if(data.result){
                     $.notify("Login Success!", "success");
                     location.reload();
                  }else{
                     $.notify(data.msg, "error");
                  }
               });
         });

